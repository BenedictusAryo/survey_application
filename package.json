{
  "name": "survey-application",
  "version": "1.0.0",
  "description": "Django Survey Application with Tailwind CSS and DaisyUI",
  "scripts": {
    "watch": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch",
    "build": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --minify && npm run copy",
    "copy": "mkdir -p staticfiles/css && cp static/css/output.css staticfiles/css/output.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "daisyui": "^5.1.0"
  }
}
